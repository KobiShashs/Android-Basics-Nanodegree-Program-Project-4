<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.musicplayer">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/now_playing_activity"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".NowPlayingActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ArtistActivity" android:label="@string/artist_activity" />
        <activity android:name=".AlbumActivity" android:label="@string/album_activity" />
        <activity android:name=".PlaylistActivity" android:label="@string/playlist_activity" />
        <activity android:name=".StoreActivity" android:label="@string/store_activity" />
        <activity android:name=".SearchActivity" android:label="@string/search_activity" />
    </application>

</manifest>